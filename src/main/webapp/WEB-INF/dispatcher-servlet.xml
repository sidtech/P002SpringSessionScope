<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName">
    
    <!-- Scan for controllers and services -->
	<context:component-scan base-package="com.sjp"/>
	
	<!-- Create a proxy to generate session-scoped shopping carts -->
	<bean id="shoppingBasket" class="com.sjp.model.ShoppingBasket" scope="session">
		<!-- This requires CGLIB -->
		<aop:scoped-proxy/>
	</bean>
	
	<!-- Maps a logical view name to a physical resource -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
</beans>
